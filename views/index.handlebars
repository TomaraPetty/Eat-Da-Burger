<h1>Eat-Da-Burger</h1>

<img src="/assets/img/burger.png" alt="burger image">


  <div class="row">
    <div class="col s6">
      <h2>Burgers to devoure!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
</ul>

    </div>
    <div class="col s6">
      <h2>Burgers devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>


  </div>
  






<div style="clear:both;"></div>

<h2 >Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="burgers_name">
  </div>

  <div class="form-group">
    <label for="devoured">Has this burger been devoured?</label><br>
    <input type="checkbox" name="devoured" value="1" checked> Devoured! <br>
    <input type="checkbox" name="devoured" value="0"> Not devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
